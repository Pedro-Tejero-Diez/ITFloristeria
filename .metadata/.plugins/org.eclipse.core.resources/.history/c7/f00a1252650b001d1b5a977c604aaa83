				//if (numero1*numero2 < 0) {  esta fue mi solucion
				if (numero1 < 0 ^ numero 2 <0) {
					//esta fue la solucion del profe y así nos presentó el XOR
				System.out.println("Hay un numero negativo");
		 }

	}

}
